@model IEnumerable<Laboratory.Models.Request> 

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<p>
    <a asp-action="Create">Create New</a>
</p>

    <div class="row">
        <div class="col">
            <select class="mb-3 btn btn-light" id="language-Selector">
                <option value="en">English</option>
                <option value="ar">Arabic</option>
            </select>
        </div>
        <div class="col">
            <button class="btn btn-info text-white">System Config</button>
        </div>
    </div>
    <div class="row">
        <div class="col mb-3">
            <h5 class="py-3 text-center text-white bg-info" >
                Students and Screening Application Form
            </h5>
        </div>
    </div>
<div class="col-3">
    <div class="form-group">
        <label  class="control-label text-info">College</label>
        <select name="College" class="form-select">
            <option>College</option>
            <option value="1">الطب البشري(المقر الرئيسي)</option>
            <option value="2">الطب والعلوم الطبية(القطاع الجنوبي)</option>
            <option value="3">طب الأسنان(المقر الرئيسي)</option>
            <option value="4">الصيدلة(المقر الرئيسي)</option>
            <option value="5">الصيدلة(القطاع الجنوبي)</option>
            <option value="6">العلوم التطبيقية</option>
            <option value="7">البصريات</option>
            <option value="8">التمريض</option>
            <option value="9">التأهيل الطبي</option>
            <option value="10">العلوم الصحية</option>
            <option value="11">الصحة العامة والمعلوماتية</option>
            <option value="12">كلية الزراعة</option>
        </select>
    </div>
</div>
<table class="table">
    <thead>
        <tr class="info">
            <th>
                @Html.DisplayNameFor(model => model.NationalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniversityNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.College)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandfatherNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyNameEn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatherNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandfatherNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FamilyNameAr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MidecalfileNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NationalId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniversityNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.College)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstNameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherNameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandfatherNameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyNameEn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstNameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherNameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandfatherNameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyNameAr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MidecalfileNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
