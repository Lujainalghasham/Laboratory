@model Laboratory.Models.Request

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">


            <div class="row">
                <div class="col">
                    <select class="mb-3 btn btn-light" id="language-Selector">
                        <option value="en">English</option>
                        <option value="ar">Arabic</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <h5 class="pb-3 pt-3 text-center text-white bg-info">
                        Students and Screening Application Form</h5>
                </div>
            </div>





    <div class="row">
        <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NationalId" class="control-label text-info"></label>
                        <input asp-for="NationalId" class="form-control" />
                        <span asp-validation-for="NationalId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="UniversityNo" class="control-label text-info"></label>
                        <input asp-for="UniversityNo" class="form-control" />
                        <span asp-validation-for="UniversityNo" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="StudentStatus" class="control-label text-info"></label>
                        <select asp-for="StudentStatus" class="form-select">
                            <option>Student Status</option>
                            <option value="1">New Student</option>
                            <option value="2">Intern</option>
                        </select>
                        <!-- <input asp-for="StudentStatus" class="form-control" /> -->
                        <span asp-validation-for="StudentStatus" class="text-danger"></span>
                    </div>
                    </div>
                        <div class="col">
                        <div class="form-group">
                            <label asp-for="College" class="control-label text-info"></label>
                            <select asp-for="College" class="form-select" >
                            <option>College</option>
                            <option value="1">الطب البشري(المقر الرئيسي)</option>
                            <option value="2">الطب والعلوم الطبية(القطاع الجنوبي)</option>
                            <option value="3">طب الأسنان(المقر الرئيسي)</option>
                            <option value="4">الصيدلة(المقر الرئيسي)</option>
                            <option value="5">الصيدلة(القطاع الجنوبي)</option>
                            <option value="6">العلوم التطبيقية</option>
                            <option value="7">البصريات</option>
                            <option value="8">التمريض</option>
                            <option value="9">التأهيل الطبي</option>
                            <option value="10">العلوم الصحية</option>
                            <option value="11">الصحة العامة والمعلوماتية</option>
                            <option value="12">كلية الزراعة</option>
                            </select>
                        <!-- <input asp-for="College" class="form-control" /> -->
                            <span asp-validation-for="College" class="text-danger"></span>
                        </div>
                        </div>       
    </div>
    <div class="row">
        <div class="col">
                    <div class="form-group">
                        <label asp-for="FirstNameEn" class="control-label text-info"></label>
                        <input asp-for="FirstNameEn" class="form-control" />
                        <span asp-validation-for="FirstNameEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="FatherNameEn" class="control-label text-info"></label>
                        <input asp-for="FatherNameEn" class="form-control" />
                        <span asp-validation-for="FatherNameEn" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="GrandfatherNameEn" class="control-label text-info"></label>
                        <input asp-for="GrandfatherNameEn" class="form-control" />
                        <span asp-validation-for="GrandfatherNameEn" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="FamilyNameEn" class="control-label text-info"></label>
                        <input asp-for="FamilyNameEn" class="form-control" />
                        <span asp-validation-for="FamilyNameEn" class="text-danger"></span>
                    </div>
                    </div>
    </div>
    <div class="row">
        <div class="col">
                    <div class="form-group">
                        <label asp-for="FirstNameAr" class="control-label text-info"></label>
                        <input asp-for="FirstNameAr" class="form-control" />
                        <span asp-validation-for="FirstNameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="FatherNameAr" class="control-label text-info"></label>
                        <input asp-for="FatherNameAr" class="form-control" />
                        <span asp-validation-for="FatherNameAr" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="GrandfatherNameAr" class="control-label text-info"></label>
                        <input asp-for="GrandfatherNameAr" class="form-control" />
                        <span asp-validation-for="GrandfatherNameAr" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="FamilyNameAr" class="control-label text-info"></label>
                        <input asp-for="FamilyNameAr" class="form-control" />
                        <span asp-validation-for="FamilyNameAr" class="text-danger"></span>
                    </div>
                    </div>
                    
        
    </div>
    <div class="row">
        <div class ="col" >
                    <div class="form-group">
                        <label asp-for="Email" class="control-label text-info"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="PhoneNo" class="control-label text-info"></label>
                        <input asp-for="PhoneNo" class="form-control" />
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>
                </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label text-info"></label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="col">
                    <div class="form-group">
                        <label asp-for="MidecalfileNo" class="control-label text-info"></label>
                        <input asp-for="MidecalfileNo" class="form-control" />
                        <span asp-validation-for="MidecalfileNo" class="text-danger"></span>
                    </div>
                    </div>
    </div>
           <div class="row">
               <div class="col">
                   <li class="text-danger">
                            In case the Id is not available, please attach a copy
                            of Qassim University student file
                   </li>
               </div>
           </div>
            <hr class="bg-dark">
            <div class="row">
                <div class="col">
                    <h5 class="text-info">Kindly select a suitable date for the needed tests.</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="DateSelected" class="control-label text-info"></label>
                        <input asp-for="DateSelected" class="form-control" />
                        <span asp-validation-for="DateSelected" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col checkbox">
                    <asp:CheckBox ID="CheckBox1" Text="I declare that the
                        above-mentioned data is accurate and filled out by me personally." Checked="false" />
                </div>
            </div>
            <hr class="bg-dark">
            <div class="row">
                <div class="col text-danger">
                    <h4>Important Notes</h4>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <ul class="text-info">
                        <li>Lab is open from 8:00 AM till 1:00 PM</li>
                        <li>
                            Students that did not submit a request through the portal will not be
                            accepted
                        </li>
                        <li>
                            Blood resulted within 14 working days, kindly bring the approved
                            university/institution tests` form filled out.
                        </li>
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-info text-white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
